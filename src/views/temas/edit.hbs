  <h1 class="pt-2">Editar Tema</h1>

  {{!-- mostrar un car al darle click en Temas --}}

  <div class="container p-4">
    <div class="row">
      <div class="col-md-4 mx-auto">
        <div class="card bg-dark border border-dark">
          <div class="card-body text-center">
            <form action="/temas/edit/{{tema.id}}" method="POST">
              <div class="form-group ">
                <input type="text" name="nombre" class="form-control bg-dark text-light mt-2 pt-2" placeholder="Nombre"
                  value="{{tema.nombre}}" autofocus />
              </div>
              <br />
              <div class="form-group">
                <textarea name="descripcion" rows="2" class="form-control bg-dark text-light"
                  placeholder="Descripción">{{tema.descripcion}}</textarea>
              </div>
              <br />
              <div class="form-group">
                <button class="btn btn-success btn-block">
                  Save
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>



